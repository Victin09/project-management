{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
        "@domain/*": ["src/core/domain/*"],
        "@application/*": ["src/core/application/*"],
        "@infraestructure/*": ["src/core/infraestructure/*"],
        "@constants/*": ["src/constants/*"]
    }
  }
}
